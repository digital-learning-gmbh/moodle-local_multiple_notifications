<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/multiple_notifications/db" VERSION="20190202" COMMENT="XMLDB file for core Moodle tables"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="multiple_notifications_email" COMMENT="Emails notifications">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="subject" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="The message subject"/>
                <FIELD NAME="message" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
                <FIELD NAME="expirythreshold" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" SEQUENCE="false" COMMENT="Custom - when should be the participants notified"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
        </TABLE>

        <TABLE NAME="multiple_notifications_logs" COMMENT="Logs the sync request result">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
                <FIELD NAME="multiple_notification_email_id" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="enrolment_id" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
                <FIELD NAME="time_send" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The time when the notifications is send."/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="multiple_notification_email_id" TYPE="foreign" FIELDS="multiple_notification_email_id" REFTABLE="multiple_notification_email" REFFIELDS="id"/>
                <KEY NAME="enrolment_id" TYPE="foreign" FIELDS="enrolment_id" REFTABLE="user_enrolments" REFFIELDS="id"/>
            </KEYS>
        </TABLE>

    </TABLES>
</XMLDB>
